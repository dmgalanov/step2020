extends include/layout
append sharedVars
    - const pageUrl = '/';
    - const pageTitle = 'Каталог';
    - const bodyAdditionClass = 'catalog-page';
    - const pageAdditionClass = 'main-page';
block content
    section.catalog.inner
        div.catalog-title
            p коллекция
            h1 Бамбук
        div.catalog-content
            div.list-wrapper
                ul.list Шелк
                    p Бамбук
                    li
                        a.list__item(href='#') Брюки
                    li
                        a.list__item(href='#') Велосипедки
                    li
                        a.list__item(href='#') Кроп-топ
                    li
                        a.list__item(href='#') Лиф с захлестом
                    li
                        a.list__item(href='#') Лиф с треугольным <br> вырезом
                    li
                        a.list__item(href='#') Лонгслив
                    li
                        a.list__item(href='#') Майка
                    li
                        a.list__item(href='#') Трусики бразильяно
                    li
                        a.list__item(href='#') Трусики слипы
                    li
                        a.list__item(href='#') Трусики слипы <br> на высокой посадке
                    li
                        a.list__item(href='#') Шорты
            div.image-wrapper
                div.image-wrapper__top
                    img(src=require("../images/catalog/item-1.1.png"))
                    img(src=require("../images/catalog/item-1.2.png"))
                    img(src=require("../images/catalog/item-1.3.png"))
                    p.image-wrapper__text Бамбуковые брюки <br>
                        span.price 2000р
                div.image-wrapper__bottom
                    img(src=require("../images/catalog/item-2.1.png"))
                    img(src=require("../images/catalog/item-2.2.png"))
                    img(src=require("../images/catalog/item-2.3.png"))
                    p.image-wrapper__text Бамбуковые брюки <br>
                        span.price 2000р
